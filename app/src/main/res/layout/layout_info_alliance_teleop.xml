            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0" />

        <TextView
            android:id="@+id/info_alliance_station2_teleopGearDeliveryCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0" />

        <TextView
            android:id="@+id/info_alliance_station3_teleopGearDeliveryCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Avg. Gears Dropped"
            android:textSize="22sp"
            app:layout_columnWeight="2" />

        <TextView
            android:id="@+id/info_alliance_station1_teleopGearDropCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0" />

        <TextView
            android:id="@+id/info_alliance_station2_teleopGearDropCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0" />

        <TextView
            android:id="@+id/info_alliance_station3_teleopGearDropCount"
