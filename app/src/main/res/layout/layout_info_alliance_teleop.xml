            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0 pts" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Climbing Success"
            android:textSize="22sp"
            app:layout_columnWeight="2" />

        <TextView
            android:id="@+id/info_alliance_station1_teleopClimbPercentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0%" />

        <TextView
            android:id="@+id/info_alliance_station2_teleopClimbPercentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0%" />

        <TextView
            android:id="@+id/info_alliance_station3_teleopClimbPercentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0%" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Avg. Climbing Points"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_columnWeight="2" />

        <TextView
            android:id="@+id/info_alliance_station1_teleopClimbPoints"
            android:layout_width="0dp"
