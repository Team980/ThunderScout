<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_floating"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Autonomous"
            android:fontFamily="@font/arimo"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="25sp" />

    </FrameLayout>

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        app:columnCount="2"
        app:orientation="horizontal"
        app:rowCount="2">

        <TextView
            android:text="Starting position"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="22sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/info_match_stormStartingLevel"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="Front of Port" />

        <TextView
            android:text="Moved off Initiation Line?"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="22sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/info_match_stormCrossedHabLine"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="FALSE" />

    </android.support.v7.widget.GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Power Cells scored"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="22sp" />

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:columnCount="2"
        app:orientation="horizontal"
        app:rowCount="2">

        <TextView
            android:text="High Port"
            android:textSize="22sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/info_match_stormHighRocketHatchCount"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0" />


        <TextView
            android:text="Low Port"
            android:textSize="22sp"
            app:layout_columnWeight="1" />

        <TextView
            android:id="@+id/info_match_stormHighRocketCargoCount"
            android:gravity="right"
            android:textSize="22sp"
            app:layout_columnWeight="1"
            tools:text="0" />


    </android.support.v7.widget.GridLayout>

</LinearLayout>